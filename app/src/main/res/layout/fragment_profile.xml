<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/profile_photo_imageView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-55dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_ironman" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:clickable="true"
                android:elevation="20dp"
                android:id="@+id/profile_email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

                <TextView
                    android:textSize="18dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:text="Email"
                    />

                <TextView
                    android:textSize="18dp"
                    android:id="@+id/profile_email_textView"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:textAlignment="textEnd"/>
            </LinearLayout>


            <LinearLayout
                android:clickable="true"
                android:elevation="4dp"
                android:id="@+id/profile_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

                <TextView
                    android:textSize="18dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:text="Name"
                    />

                <TextView
                    android:textSize="18dp"
                    android:id="@+id/profile_name_textView"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

            <LinearLayout
                android:clickable="true"
                android:elevation="20dp"
                android:id="@+id/profile_birthday_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

                <TextView
                    android:textSize="18dp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:text="Date of birth" />

                <TextView
                    android:textSize="18dp"
                    android:id="@+id/profile_birthday_textView"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:textAlignment="textEnd"
                   />

            </LinearLayout>

            <LinearLayout

                android:clickable="true"
                android:elevation="4dp"
                android:id="@+id/profile_gender_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

                <TextView
                    android:textSize="18dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:text="Gender"
                    />

                <TextView
                    android:textSize="18dp"
                    android:id="@+id/profile_gender_textView"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

            <LinearLayout
                android:clickable="true"
                android:elevation="20dp"
                android:id="@+id/profile_height_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

                <TextView
                    android:textSize="18dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:text="Height"
                    android:id="@+id/textView2" />

                <TextView
                    android:textSize="18dp"
                    android:id="@+id/profile_height_textView"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:textAlignment="textEnd"
                    />

            </LinearLayout>

            <LinearLayout
                android:clickable="true"
                android:elevation="4dp"
                android:id="@+id/profile_weight_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

                <TextView
                    android:textSize="18dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    android:padding="12dp"
                    android:text="Weight"
                    android:id="@+id/textView4"
                    />

                <TextView
                    android:textSize="16dp"
                    android:id="@+id/profile_weight_textView"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:textAlignment="textEnd"
                    />

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="4dp"
            android:paddingBottom="24dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_alignParentStart="true">

        </RelativeLayout>

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
        </ImageView>


    </RelativeLayout>
</ScrollView>