<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.ms.njord.fragments.DeStress"
    android:background="@drawable/landscap_background">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:text=""
        android:id="@+id/destress_english_button"
        android:background="@drawable/button_gray"
        android:alpha="0.7"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/destress_danish_button"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="180dp"
        android:layout_height="100dp" />

    <Button
        android:text=""
        android:id="@+id/destress_danish_button"
        android:background="@drawable/button_gray"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="104dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="180dp"
        android:layout_height="100dp" />

    <TextView
        android:text="English"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/textView5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/destress_english_button"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="Danish"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        app:layout_constraintBottom_toTopOf="@+id/destress_danish_button"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/cast_ic_notification_play"
        android:id="@+id/destress_englishPlay_image"
        app:layout_constraintBottom_toBottomOf="@+id/destress_english_button"
        app:layout_constraintTop_toTopOf="@+id/destress_english_button"
        app:layout_constraintLeft_toLeftOf="@+id/destress_english_button"
        app:layout_constraintRight_toRightOf="@+id/destress_english_button" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/ic_media_pause"
        android:id="@+id/destress_englishPause_image"
        app:layout_constraintBottom_toBottomOf="@+id/destress_english_button"
        app:layout_constraintTop_toTopOf="@+id/destress_english_button"
        app:layout_constraintLeft_toLeftOf="@+id/destress_english_button"
        app:layout_constraintRight_toRightOf="@+id/destress_english_button"
        android:visibility="invisible"/>


    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/cast_ic_notification_play"
        android:id="@+id/destress_danishPlay_image"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintBottom_toBottomOf="@+id/destress_danish_button"
        app:layout_constraintRight_toRightOf="@+id/destress_danish_button"
        app:layout_constraintLeft_toLeftOf="@+id/destress_danish_button" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/ic_media_pause"
        android:id="@+id/destress_danishPause_image"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintBottom_toBottomOf="@+id/destress_danish_button"
        app:layout_constraintRight_toRightOf="@+id/destress_danish_button"
        app:layout_constraintLeft_toLeftOf="@+id/destress_danish_button"
        android:visibility="invisible"/>


</android.support.constraint.ConstraintLayout>
