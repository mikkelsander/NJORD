<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.ms.njord.activity.SignUpActivity"
    android:background="@color/dark_gray">

    <TextView
        android:text="Tell us more about you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUp_title_textView"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <EditText
        android:layout_width="216dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/signUp_name_editText"
        android:hint="Name"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/signUp_title_textView"
        app:layout_constraintLeft_toLeftOf="@+id/signUp_title_textView" />

    <TextView
        android:hint="Birthday"
        android:textColorHint="@color/white"
        android:layout_width="216dp"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/signUp_birthday_textView"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/signUp_name_editText"
        android:layout_height="40dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/signUp_name_editText" />

    <Spinner
        android:hint="Gender"
        android:layout_width="216dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/signUp_gender_spinner"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/signUp_birthday_textView"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/signUp_birthday_textView" />

    <EditText
        android:hint="Height"
        android:textColorHint="@color/white"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/signUp_height_editText"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/signUp_gender_spinner"
        android:layout_width="216dp"
        android:maxLength="3"
        app:layout_constraintLeft_toLeftOf="@+id/signUp_gender_spinner" />

    <EditText
        android:hint="Weigth"
        android:textColorHint="@color/white"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/signUp_weight_editText"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/signUp_height_editText"
        android:layout_width="216dp"
        android:maxLength="3"
        app:layout_constraintLeft_toLeftOf="@+id/signUp_height_editText" />


    <Button
        android:text="Confirm"
        android:textColor="@color/white"

        android:background="@drawable/button_blue"
        android:layout_width="127dp"
        android:layout_height="51dp"
        android:id="@+id/signUp_confirm_button"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/signUp_weight_editText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
