<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    tools:context="com.project.ms.njord.fragment.LineChartFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart_chartView"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/graphView_line_chart"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:orientation="vertical"
                android:clickable="true"
                android:elevation="4dp"
                android:id="@+id/profile_name_layout"
                android:background="@color/blue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="19dp"
                android:layout_below="@+id/graphView_line_chart"
                android:layout_centerHorizontal="true">

                <TextView
                    android:text="Test 1"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/lineChart_test1_textView"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:text="67"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:clickable="true"
                android:elevation="4dp"
                android:id="@+id/profile_name_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="19dp"
                android:layout_below="@+id/graphView_line_chart"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:text="test 2"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/lineChart_test2_textView"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:text="76"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:clickable="true"
                android:elevation="4dp"
                android:id="@+id/profile_name_layout"
                android:background="@color/blue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="19dp"
                android:layout_below="@+id/graphView_line_chart"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:text="test 3"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/lineChart_test3_textView"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:text="89"
                    android:textAlignment="center"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
