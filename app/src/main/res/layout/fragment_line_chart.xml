<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.ms.njord.fragment.LineChartFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.jjoe64.graphview.GraphView
        android:layout_width="wrap_content"
        android:layout_height="253dp"
        android:id="@+id/graphView_line_chart"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.46" />

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="97dp"
            app:layout_constraintTop_toBottomOf="@+id/graphView_line_chart"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/graphView_line_chart"
            android:layout_centerHorizontal="true">


            <TextView
                android:text="asdsaasdsdsaad"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                tools:layout_editor_absoluteX="163dp"
                android:layout_marginTop="120dp"
                android:id="@+id/lineChart_test1_textView" />


            <TextView
                android:text="2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                tools:layout_editor_absoluteX="163dp"
                android:layout_marginTop="120dp"
                android:id="@+id/lineChart_test2_textView" />


            <TextView
                android:text="3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                tools:layout_editor_absoluteX="163dp"
                android:layout_marginTop="120dp"
                android:id="@+id/lineChart_test3_textView" />


        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
