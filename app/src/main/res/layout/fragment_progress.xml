<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <com.jjoe64.graphview.GraphView
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:id="@+id/fragment_progress_graph"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/frameLayout"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="255dp">

    </FrameLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="295dp"
        android:id="@+id/fragment_results_framelayout_graph"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.62">

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:text="19/08/2016"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:id="@+id/progress_date_textview"
        app:layout_constraintRight_toRightOf="@+id/fragment_results_framelayout_graph"
        app:layout_constraintTop_toTopOf="@+id/fragment_results_framelayout_graph" />

    <TextView
        android:text="Inhale / Exhale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_title_textview"
        app:layout_constraintTop_toTopOf="@+id/fragment_results_framelayout_graph"
        app:layout_constraintRight_toRightOf="@+id/fragment_results_framelayout_graph"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_results_framelayout_graph"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        android:fontFamily="sans-serif"
        />

    <TextView
        android:text="Trial 1: 67 / 89"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_data1_textview"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/progress_title_textview"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="Trial 2: 66 / 90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_data2_textview"
        app:layout_constraintTop_toBottomOf="@+id/progress_data1_textview"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/progress_data1_textview" />

    <TextView
        android:text="Trial 3: 98 / 66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_data3_textview"
        app:layout_constraintLeft_toLeftOf="@+id/progress_data2_textview"
        app:layout_constraintTop_toBottomOf="@+id/progress_data2_textview"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_results_framelayout_graph"
        android:layout_marginBottom="20dp" />

    <TextView
        android:text="55 / 67"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_average_textview"
        android:textSize="54sp"
        app:layout_constraintBottom_toBottomOf="@+id/progress_data3_textview"
        app:layout_constraintTop_toTopOf="@+id/progress_data1_textview"
        app:layout_constraintRight_toRightOf="@+id/fragment_results_framelayout_graph"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/progress_data2_textview" />


</android.support.constraint.ConstraintLayout>