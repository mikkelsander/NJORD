<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.ms.njord.fragments.ManometerFragment"
    android:background="@drawable/background"
    >

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/manometer_level_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="0"
            android:textSize="100dp"
            app:layout_constraintLeft_toLeftOf="@+id/manometer_test2_textView"
            app:layout_constraintRight_toRightOf="@+id/manometer_test2_textView"
            app:layout_constraintTop_toBottomOf="@+id/manometer_test2_textView" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:text="Take 1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="take 2"
            app:layout_constraintLeft_toRightOf="@+id/textView1"
            app:layout_constraintTop_toTopOf="@+id/textView1" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Take 3"
            app:layout_constraintLeft_toRightOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <TextView
            android:id="@+id/manometer_test1_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/Pantone300cBlue"
            app:layout_constraintLeft_toLeftOf="@+id/textView1"
            app:layout_constraintRight_toRightOf="@+id/textView1"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />
        <TextView
            android:id="@+id/manometer_test2_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/Pantone300cBlue"
            app:layout_constraintLeft_toLeftOf="@+id/textView2"
            app:layout_constraintRight_toRightOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/manometer_test1_textView" />
        <TextView
            android:id="@+id/manometer_test3_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/Pantone300cBlue"
            app:layout_constraintLeft_toLeftOf="@+id/textView3"
            app:layout_constraintRight_toRightOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/manometer_test2_textView" />

        <TextView
            android:id="@+id/manometer_test4_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="@color/red"
            app:layout_constraintLeft_toLeftOf="@+id/textView1"
            app:layout_constraintRight_toRightOf="@+id/textView1"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />
        <TextView
            android:id="@+id/manometer_test5_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/red"
            app:layout_constraintLeft_toLeftOf="@+id/textView2"
            app:layout_constraintRight_toRightOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/manometer_test4_textView" />
        <TextView
            android:id="@+id/manometer_test6_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/red"
            app:layout_constraintLeft_toLeftOf="@+id/textView3"
            app:layout_constraintRight_toRightOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/manometer_test5_textView" />


        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/textView1"
            app:layout_constraintTop_toBottomOf="@+id/manometer_level_textView"
            android:layout_marginStart="8dp"
            app:layout_constraintRight_toLeftOf="@+id/guideline2"
            android:layout_width="170dp"
            android:layout_height="115dp">

            <TextView
                android:id="@+id/manomater_userInstructions_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Empty your lungs and inhale as hard as you can"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="337dp" />
        </FrameLayout>

        <ImageView
            android:id="@+id/manometer_imageView"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:maxHeight="400dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout2"
            app:layout_constraintLeft_toRightOf="@+id/frameLayout2"
            app:layout_constraintRight_toRightOf="parent"
            android:alpha="0.5"
            app:srcCompat="@drawable/manometer" />


        <Button
            android:id="@+id/manometer_start_button"
            android:layout_height="55dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_blue"
            android:text="Start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.66"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
            app:layout_constraintVertical_bias="0.95"
            android:layout_width="150dp" />

        <Button
            android:id="@+id/manometer_done_button"
            android:layout_height="55dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/button_gray"
            android:text="Done"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.33"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_width="150dp"
            app:layout_constraintTop_toTopOf="@+id/manometer_start_button" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            app:srcCompat="@color/white"
            android:id="@+id/imageView4"
            android:alpha="0.6"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView1"
            app:layout_constraintRight_toRightOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/manometer_test2_textView"
            android:layout_height="1dp" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
