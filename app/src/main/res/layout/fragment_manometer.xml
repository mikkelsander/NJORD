<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.ms.njord.fragment.ManometerFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="0"
            android:textSize="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manometer_level_textView"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/manometer_test2_textView"
            app:layout_constraintLeft_toLeftOf="@+id/manometer_test2_textView"
            app:layout_constraintRight_toRightOf="@+id/manometer_test2_textView" />

        <TextView
            android:text="Test 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.0" />
        <TextView
            android:text="Test 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toRightOf="@+id/textView1"
            app:layout_constraintTop_toTopOf="@+id/textView1" />
        <TextView
            android:text="Test 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toRightOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2" />
        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manometer_test1_textView"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            app:layout_constraintLeft_toLeftOf="@+id/textView1"
            app:layout_constraintRight_toRightOf="@+id/textView1" />
        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manometer_test2_textView"
            app:layout_constraintTop_toTopOf="@+id/manometer_test1_textView"
            app:layout_constraintLeft_toLeftOf="@+id/textView2"
            app:layout_constraintRight_toRightOf="@+id/textView2" />
        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manometer_test3_textView"
            app:layout_constraintTop_toTopOf="@+id/manometer_test2_textView"
            app:layout_constraintLeft_toLeftOf="@+id/textView3"
            app:layout_constraintRight_toRightOf="@+id/textView3" />

        <FrameLayout
            android:layout_width="215dp"
            android:layout_height="165dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView1"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/manometer_level_textView"
            app:layout_constraintRight_toRightOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.0">

            <TextView
                android:text="Fill your lungs and Exhale as hard as you can until thay are empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/manomater_userInstructions_textView"
                tools:layout_editor_absoluteY="337dp"
                tools:layout_editor_absoluteX="0dp" />
        </FrameLayout>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
