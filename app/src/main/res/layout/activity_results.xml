<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.ms.njord.activity.ResultsActivity"
    android:background="@color/gray_dark">

    <Button
        android:text="Done"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:id="@+id/activity_results_doneBtn"
        android:background="@drawable/button_blue"
        android:textColor="@color/white"


        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="Inhale: 52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_results_inhale_avg"
        android:textSize="44sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="Exhale: 59"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_results_exhale_avg"
        android:textSize="44sp"
        tools:layout_editor_absoluteY="116dp"
        tools:layout_editor_absoluteX="109dp" />

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#FF0000FF"
        android:layout_marginEnd="56dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="2% better than last time!"
        android:layout_width="108dp"
        android:layout_height="66dp"
        tools:layout_editor_absoluteY="275dp"
        android:id="@+id/textView8"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="20% better than your average!"
        android:layout_width="113dp"
        android:layout_height="55dp"
        android:id="@+id/textView11"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        android:layout_marginStart="70dp"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        app:layout_constraintHorizontal_bias="0.58"
        android:layout_marginEnd="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>
